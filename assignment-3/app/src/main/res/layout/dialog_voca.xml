<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="새 단어장 만들기"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/owner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="단어장 소유자"
        style="@style/DIALOG_TEXT"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/ownerAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="소유자 이름을 입력하세요"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/owner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="단어장 이름"
        style="@style/DIALOG_TEXT"
        app:layout_constraintTop_toBottomOf="@+id/ownerAnswer"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/nameAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="단어장 이름을 입력하세요"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="단어장 비밀번호"
        style="@style/DIALOG_TEXT"
        app:layout_constraintTop_toBottomOf="@+id/nameAnswer"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/pwAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="단어장 비밀번호를 입력하세요"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/pw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="취소"
        android:textSize="20sp"
        android:padding="10dp"
        android:clickable="true"
        app:layout_constraintTop_toBottomOf="@+id/pwAnswer"
        app:layout_constraintEnd_toStartOf="@+id/confirm"/>

    <TextView
        android:id="@+id/confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="확인"
        android:textSize="20sp"
        android:padding="10dp"
        android:clickable="true"
        app:layout_constraintTop_toBottomOf="@+id/pwAnswer"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>