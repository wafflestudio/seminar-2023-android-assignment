<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/movie_poster"
                android:layout_height="400dp"
                android:layout_width="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:padding="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/movie_detail_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                >
            </ImageView>

            <TextView
                android:id="@+id/movie_detail_title"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@+id/movie_poster"
                app:layout_constraintBottom_toTopOf="@+id/movie_detail_director"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
            </TextView>

            <TextView
                android:id="@+id/movie_detail_director"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@+id/movie_detail_title"
                app:layout_constraintBottom_toTopOf="@+id/movie_detail_description"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
            </TextView>

            <TextView
                android:id="@+id/movie_detail_description"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:padding="10dp"
                app:layout_constraintTop_toBottomOf="@+id/movie_detail_director"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
            </TextView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>