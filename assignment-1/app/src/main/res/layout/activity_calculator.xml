<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".calculator">

    <TextView
        android:id="@+id/userInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="유저 정보"
        android:textSize="50sp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:typeface="serif"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:typeface="serif"
        app:layout_constraintTop_toBottomOf="@+id/userInfo"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:typeface="serif"
        app:layout_constraintTop_toBottomOf="@+id/id"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/firstNum"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:hint="첫번째 수"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toStartOf="@+id/operation"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/operation"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:paddingStart="10dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintStart_toEndOf="@+id/firstNum"
        app:layout_constraintBottom_toTopOf="@+id/button"/>

    <EditText
        android:id="@+id/secondNum"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:paddingStart="10dp"
        android:hint="두번째 수"
        android:layout_marginBottom="50dp"
        app:layout_constraintStart_toEndOf="@+id/operation"
        app:layout_constraintBottom_toTopOf="@+id/button"/>

    <TextView
        android:id="@+id/equal"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:paddingStart="10dp"
        android:paddingBottom="10dp"
        android:typeface="serif"
        android:text="="
        android:layout_marginBottom="50dp"
        app:layout_constraintStart_toEndOf="@+id/secondNum"
        app:layout_constraintBottom_toTopOf="@+id/button"/>

    <TextView
        android:id="@+id/answer"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:paddingStart="10dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintStart_toEndOf="@+id/equal"
        app:layout_constraintBottom_toTopOf="@+id/button"/>

    <GridLayout
        android:id="@+id/button"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="+"
            android:textSize="50sp"
            android:background="#99FF99" />

        <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="-"
            android:textSize="50sp"
            android:background="#FFFF00"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="*"
            android:textSize="50sp"
            android:background="#FF6666"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="/"
            android:textSize="50sp"
            android:background="#6600CC"/>
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>