<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <TextView
            android:id="@+id/returnButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf= "@id/board"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize = "30sp"
            android:text = "@string/Return"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:background="@android:color/holo_blue_light"
            >
        </TextView>

        <TextView
            android:id="@+id/whatNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf= "parent"
            app:layout_constraintBottom_toTopOf="@id/board"
            android:textSize = "30sp"
            android:layout_marginTop="10dp"
            >
        </TextView>

        <TextView
            android:id="@+id/turn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf= "@id/whatNumber"
            app:layout_constraintBottom_toTopOf="@id/board"
            android:text = "@string/turn"
            android:textSize = "30sp"
            android:layout_marginTop="10dp"
            >
        </TextView>

        <GridLayout
            android:id = "@+id/board"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin = "10dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:columnCount="3"
            android:rowCount="3"
            >

            <TextView
                android:id = "@+id/block0.0"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_column="0"
                android:layout_row="0"
                android:textSize="30sp"
                android:text = "@string/empty"
                android:layout_margin="1dp"
                android:gravity="center"
                android:background="@android:color/darker_gray"
                >
            </TextView>

            <TextView
                android:id = "@+id/block0.1"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_column="0"
                android:layout_row="1"
                android:textSize="30sp"
                android:text = "@string/empty"
                android:layout_margin="1dp"
                android:gravity="center"
                android:background="@android:color/darker_gray"
                >
            </TextView>

            <TextView
                android:id = "@+id/block0.2"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_column="0"
                android:layout_row="2"
                android:textSize="30sp"
                android:text = "@string/empty"
                android:layout_margin="1dp"
                android:gravity="center"
                android:background="@android:color/darker_gray"
                >
            </TextView>

            <TextView
                android:id = "@+id/block1.0"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_column="1"
                android:layout_row="0"
                android:textSize="30sp"
                android:text = "@string/empty"
                android:layout_margin="1dp"
                android:gravity="center"
                android:background="@android:color/darker_gray"
                >
            </TextView>

            <TextView
                android:id = "@+id/block1.1"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_column="1"
                android:layout_row="1"
                android:textSize="30sp"
                android:text = "@string/empty"
                android:layout_margin="1dp"
                android:gravity="center"
                android:background="@android:color/darker_gray"
                >
            </TextView>

            <TextView
                android:id = "@+id/block1.2"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_column="1"
                android:layout_row="2"
                android:textSize="30sp"
                android:text = "@string/empty"
                android:layout_margin="1dp"
                android:gravity="center"
                android:background="@android:color/darker_gray"
                >
            </TextView>

            <TextView
                android:id = "@+id/block2.0"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_column="2"
                android:layout_row="0"
                android:textSize="30sp"
                android:text = "@string/empty"
                android:layout_margin="1dp"
                android:gravity="center"
                android:background="@android:color/darker_gray"
                >
            </TextView>

            <TextView
                android:id = "@+id/block2.1"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_column="2"
                android:layout_row="1"
                android:textSize="30sp"
                android:text = "@string/empty"
                android:layout_margin="1dp"
                android:gravity="center"
                android:background="@android:color/darker_gray"
                >
            </TextView>

            <TextView
                android:id = "@+id/block2.2"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_column="2"
                android:layout_row="2"
                android:textSize="30sp"
                android:text = "@string/empty"
                android:layout_margin="1dp"
                android:gravity="center"
                android:background="@android:color/darker_gray"
                >
            </TextView>
        </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>