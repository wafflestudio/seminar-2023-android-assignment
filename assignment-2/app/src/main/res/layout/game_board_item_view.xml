<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/boardBackground"
        android:layout_width="220dp"
        android:layout_height="280dp"
        android:background="@drawable/round_square">

        <TextView
            android:id="@+id/textTurnNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1턴"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout

            android:id="@+id/board"
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/board1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text=""
                android:textSize="40sp"
                android:background="#43000000"
                android:textAlignment="center"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/board2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/board4"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"/>
            <TextView
                android:id="@+id/board2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text=""
                android:textSize="40sp"
                android:background="#43000000"
                android:textAlignment="center"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@id/board1"
                app:layout_constraintEnd_toStartOf="@id/board3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/board5"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"/>
            <TextView
                android:id="@+id/board3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text=""
                android:textSize="40sp"
                android:background="#43000000"
                android:textAlignment="center"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@id/board2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/board6"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"/>
            <TextView
                android:id="@+id/board4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text=""
                android:textSize="40sp"
                android:background="#43000000"
                android:textAlignment="center"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/board5"
                app:layout_constraintTop_toBottomOf="@id/board1"
                app:layout_constraintBottom_toTopOf="@id/board7"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"/>
            <TextView
                android:id="@+id/board5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text=""
                android:textSize="40sp"
                android:background="#43000000"
                android:textAlignment="center"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@id/board4"
                app:layout_constraintEnd_toStartOf="@id/board6"
                app:layout_constraintTop_toBottomOf="@id/board2"
                app:layout_constraintBottom_toTopOf="@id/board8"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"/>
            <TextView
                android:id="@+id/board6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text=""
                android:textSize="40sp"
                android:background="#43000000"
                android:textAlignment="center"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@id/board5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/board3"
                app:layout_constraintBottom_toTopOf="@id/board9"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"/>
            <TextView
                android:id="@+id/board7"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text=""
                android:textSize="40sp"
                android:background="#43000000"
                android:textAlignment="center"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/board8"
                app:layout_constraintTop_toBottomOf="@id/board4"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"/>
            <TextView
                android:id="@+id/board8"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text=""
                android:textSize="40sp"
                android:background="#43000000"
                android:textAlignment="center"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@id/board7"
                app:layout_constraintEnd_toStartOf="@id/board9"
                app:layout_constraintTop_toBottomOf="@id/board5"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"/>
            <TextView
                android:id="@+id/board9"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text=""
                android:textSize="40sp"
                android:background="#43000000"
                android:textAlignment="center"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@id/board8"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/board6"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="되돌아가기"
            android:textSize="20sp"
            android:background="#3DE6D6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="15dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>