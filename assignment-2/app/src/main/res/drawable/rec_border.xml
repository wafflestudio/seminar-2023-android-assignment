<!-- rectangle_border.xml -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 테두리 색상 -->
    <stroke
        android:width="2dp"
        android:color="@android:color/black" />

    <!-- 배경 색상 -->
    <solid
        android:color="@android:color/transparent" />

    <!-- 모서리 반경 (옵션) -->
    <corners
        android:radius="10dp" />

</shape>